<h1>Listing bonds</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bonds.each do |bond| %>
      <tr>
        <td><%= bond.source.name %> - <%= bond.source.id %></td>
        <td><%= bond.target.name %> - <%= bond.target.id %></td>
        <td><%= link_to 'Show', bond %></td>
        <td><%= link_to 'Edit', edit_bond_path(bond) %></td>
        <td><%= link_to 'Destroy', bond, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bond', new_bond_path %>
